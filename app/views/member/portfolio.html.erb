<h1><% title "My Portfolio" %></h1>


<table>
  <tr>
	  <th></th>
    <th>Title</th>
  </tr>
  <% for album in @albums %>
		<div>
			<tr>
				<% image = image_tag AlbumImage.find(album.cover_id).image.url, :width=> '200'%>
				<td><%= link_to image, {:action => 'show_album_image', :id => album.cover_id} %></td>
				<td><%= album.title %></td>
				<td><%= album.description %></td>
				<td><%= link_to "Show", {:action => 'show_album', :id => album.id } %></td>
				<td><%= link_to "Edit", {:action => 'edit_album_info', :id => album.id }%></td>
				<td><%= link_to "Destroy", album, :confirm => 'Are you sure?', :method => :delete %></td>
			</tr>
		</div>
  <% end %>
</table>

<p><%= link_to "New Album", 'new_album' %></p>

